/**stations.wxss**/

.view_buttons {
  border: 1px solid #0033cc;
  display: inline-block;
  position: relativve;
  width: 99%;
  height: 60px;
}

.view_buttons button {
  text-align: center;
  vertical-align: center;
  padding-top: 10px;
}

button.list_view{
  margin-right: 0px;
  width:50%;
  height: 100%;
  float: left;
  border-radius:0px;
  color: white;
  background-color: #0033cc;
}

button.list_view_focus{
  margin-right: 0px;
  width:50%;
  height: 100%;
  float: left;
  border-radius:0px;
  color: #0033cc;
  background-color: white;
}

button.map_view {
  margin-left: 0px;
  width:50%;
  height: 100%;
  border-left: 1px solid #0033cc;
  border-radius:0px;
  color: white;
  background-color: #0033cc;
}

button.map_view_focus {
  margin-left: 0px;
  width:50%;
  height: 100%;
  border-left: 1px solid #0033cc;
  border-radius:0px;
  color: #0033cc;
  background-color: white;
}

.list_container{
  width: 91%;
  margin-right: 9%
}

.station_card {
  position: relative;
  background-color: #FAFAFA;
  width: 100%;
  border: 1px solid #C2C2C2;
  margin-top: 10px;
  padding:5%;
}

.card_header {
  width: 100%;
}

.station_name_text {
  font-size: 16px;
}

.directions_text {
  color: blue;
  position: absolute;
  top: 7%;
  right: 5%;
  font-size: 16px;
}

.distance_image{
  width: 8px;
  height: 13px;
}

.distance_text {
  font-size: 15px;
  color: #A8A8A8;
  margin-left: 3px;
}

.station_line_card {
  width: 100%;
}

.line_header {
  border-top-style: solid;
  border-left-style: solid;
  border-right-style:solid;
  border-top-width: 1px;
  border-left-width: 1px;
  border-right-width:1px;
  border-top-left-radius: 5px;
  border-top-right-radius: 5px;
  text-align: center;
  color: white;
  width: 100%;
  height: 25px;
  margin-top: 10px;
  padding-top: 5px;
}

.destionation_data {
  border-bottom-style: solid;
  border-left-style: solid;
  border-right-style:solid;
  border-bottom-width: 1px;
  border-left-width: 1px;
  border-right-width:1px;
  width: 100%;
  text-align: center;
  padding: 10px 0px;
}

.destination_name {
  color: #979797;
  margin-bottom: 8px;
}

.time_data {
  display: inline-block;
  vertical-align: center;
}

.divider_H {
  background: #979797;
  border-top: solid 1px #979797;
  height: 1px;
  display: inline-block;
  width: 25px;
  margin-bottom: 5px;
}

.first_time {
  margin-right: 5px;
}

.last_time {
  margin-left: 5px;
}

.station_container {
  position: relative;
  margin-bottom: 20px;
}
.station_header {
  width: 100%;
  height: 40px;
  background-color: #FCFCFC;
  padding: 20rpx 5rpx 20rpx 5rpx;
}

.station_header_name {
  float: left;
  vertical-align: center;
  text-align: left;
  margin-left: 5rpx;
  font-family: Arial, Helvetica, sans-serif;
  font-weight: bold;
  font-size: 16px;
}

.station_directions {
  float: right;
  color: blue;
  font-size: 16px;
  font-family: Arial, Helvetica, sans-serif;
  margin-right: 5px;
}

map {
  width:375px;
  height: 540px;
}
